{
 "id": "/flask-app123",
 "acceptedResourceRoles": ["slave_public"],
 "container": {
   "type": "DOCKER",
   "docker": {
     "image": "mesosphere/python-flask-hello:latest"
   },
   "portMappings": [
      { "port": 0, "protocol": "tcp" ,
     "labels": {
        "VIP_0": "/app:10000"
      }}
    ]
  },
 "cpus": 1,
 "instances": 1,
 
 "mem": 512,
 "networks": [
   {
     "mode": "host",
   }
 ],
 "upgradeStrategy": {
   "maximumOverCapacity": 1,
   "minimumHealthCapacity": 1
 }
}